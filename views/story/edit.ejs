<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method="POST" action="/<%= anime._id%>?_method=PUT" id="edit">
        <table>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= anime.title%>" class = "fixed-width" required></td>
            </tr>
            <tr><td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width" required minlength="10"><%= anime.content%></textarea></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>

    </div>
