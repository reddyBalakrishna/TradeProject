<%- include('../partials/header.ejs') %>

  <div class="images">
    <% if(categories.length){ %>
      <% categories.forEach(category => { %>
          <h4><%= category %></h4>
              <% if(animeStories.length){ %>
                  <% animeStories.forEach(trade => { 
                      if (trade.category === category) { %>
                         <h5><a href="/animetrade/<%= trade.id %>"><%= trade.title %></a></h5>
                      <% } });
                  } else { %>
                      <p>There are no trades to display.</p>
              <% } %>
      <% }); %>
  <% } else { %>
      <p>There are no categories to display.</p>
  <% } %>
   </div>